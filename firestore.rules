rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null 
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Meeting rooms collection
    match /meetings/{meetingId} {
      // Allow authenticated users to read any meeting
      allow read: if request.auth != null;
      
      allow create: if request.auth != null 
        && isAdmin()
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.participants is list
        && request.auth.uid in request.resource.data.participants;
      
      // Host can update anything, participants can only update transcript, admins can update any meeting
      allow update: if request.auth != null 
        && (
          // Admins can update everything
          isAdmin()
          // Host can update everything
          || request.auth.uid == resource.data.createdBy
          // Participants can only add to transcript
          || (request.auth.uid in resource.data.participants 
              && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['transcript']))
        );
      
      // Allow meeting creator or admins to delete
      allow delete: if request.auth != null 
        && (request.auth.uid == resource.data.createdBy || isAdmin());
      
      // Transcripts subcollection
      match /transcripts/{transcriptId} {
        // Allow participants and admins to read transcripts
        allow read: if request.auth != null 
          && (isAdmin() || request.auth.uid in get(/databases/$(database)/documents/meetings/$(meetingId)).data.participants);
        
        // Allow participants to create transcripts
        allow create: if request.auth != null 
          && request.auth.uid in get(/databases/$(database)/documents/meetings/$(meetingId)).data.participants
          && request.resource.data.userId == request.auth.uid;
      }
    }
    
    match /users/{userId} {
      // All authenticated users can read user data
      allow read: if request.auth != null;
      // Users can write their own data, admins can write any user data
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
  }
}
