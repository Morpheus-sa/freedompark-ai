rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Meeting rooms collection
    match /meetings/{meetingId} {
      // Allow authenticated users to read any meeting
      allow read: if request.auth != null;
      
      // Allow authenticated users to create meetings
      allow create: if request.auth != null 
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.participants is list
        && request.auth.uid in request.resource.data.participants;
      
      // Allow meeting creator or participants to update
      allow update: if request.auth != null 
        && (request.auth.uid == resource.data.createdBy 
            || request.auth.uid in resource.data.participants);
      
      // Allow meeting creator to delete
      allow delete: if request.auth != null 
        && request.auth.uid == resource.data.createdBy;
      
      // Transcripts subcollection
      match /transcripts/{transcriptId} {
        // Allow participants to read transcripts
        allow read: if request.auth != null 
          && request.auth.uid in get(/databases/$(database)/documents/meetings/$(meetingId)).data.participants;
        
        // Allow participants to create transcripts
        allow create: if request.auth != null 
          && request.auth.uid in get(/databases/$(database)/documents/meetings/$(meetingId)).data.participants
          && request.resource.data.userId == request.auth.uid;
      }
    }
  }
}
